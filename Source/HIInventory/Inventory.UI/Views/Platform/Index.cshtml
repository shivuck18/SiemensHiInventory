@model IEnumerable<PlatformDto>




<script src="~/js/jquery.js"></script>
<script src="~/js/jquery1104.dataTables.min.js"></script>
<link href="~/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/js/jquery11019.dataTables.min.js"></script>
<script src="~/js/DataTables.Bootstrapper.min.js"></script>
<link href="~/css/site.css" rel="stylesheet" />


<script type="text/javascript">
    $(document).ready(function () {
        $('#PaginationId').DataTable(
            {
                "pageLength": 5,
                "sPaginationType": "full_numbers",
                "lengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]]

            });
    });

    //$(document).ready(function () {
    //    $('form[action$="/Delete"]').submit(function () {
    //        return confirm('Are you sure you want to delete ?');
    //    });
    //}); 

      function deletConfirmation() {
        if (!confirm("Are you sure you want to delete ?"))
            event.preventDefault();
    }

</script>
<style>
    #PaginationId_wrapper {
        width: 90%;
        margin-left: 75px;
    }

    .margin {
        margin-left: 75px;
        margin-bottom:10px;
    }

    .width {
        width: 75px;
    }
    .table {
        border: 1px solid
    }

</style>
<div class="page-header">
    <div class="w3-text-blue">
        <h1>PLATFORM</h1>
    </div>
</div>
<div class="row" style="margin-top:10px">
    <div class="col-md-10"></div>
    <a asp-action="Add" class="margin btn btn-info">Add New</a>
</div>
<section>
    <div class="row">
        <table class="table" id="PaginationId">
            <thead>
                <tr>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.PlatformName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ICType)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.PlatformName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ICType)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success width" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger width", @onclick = "deletConfirmation()" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</section>
