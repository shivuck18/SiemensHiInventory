@model IEnumerable<PlatformDto>




<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
<link href="~/css/site.css" rel="stylesheet" />


<script type="text/javascript">
    $(document).ready(function () {
        $('#TableId').DataTable(
            {
                "pageLength": 5,
                "sPaginationType": "full_numbers",
                "lengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]]

            });


    });
</script>
<style>
    #TableId_wrapper {
        width: 90%;
        margin-left: 75px;
    }

    .margin {
        margin-left: 75px;
    }

    .width {
        width: 75px;
    }
</style>
<div class="page-header">
    <div class="w3-text-blue">
        <h1>PLATFORM</h1>
    </div>
</div>
<div class="row" style="margin-top:10px">
    <div class="col-md-10"></div>
    <a asp-action="Add" class="margin btn btn-info">Add New</a>
</div>
<section>
    <div class="row">
        <table class="table" id="TableId" style="border:1px solid">
            <thead>
                <tr>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.PlatformName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ICType)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.PlatformName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ICType)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success width" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger width" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</section>
