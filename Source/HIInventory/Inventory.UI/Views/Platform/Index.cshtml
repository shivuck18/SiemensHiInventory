@model IEnumerable<Inventory.Dto.PlatformDto>
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
       
        $('#TableId').DataTable(
            {
                "pageLength": 5
            });

    });
</script>
<p>
    <a asp-action="Add">Add New</a>
</p>
<table class="table" id="TableId">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlatformName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ICType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlatformName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ICType)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id },new { @class="btn btn-success"}) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
